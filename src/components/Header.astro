---
import Hamburger from "./Hamburger.astro";
import Navigation from "./Navigation.astro";
import ThemeIcon from "./ThemeIcon.astro";
import deltaIcon from "../assets/img/icon-001.png";
---

<style>
  header {
    background-color: #f8f9f9;
    width: 100%;
    padding: 1rem;
  }
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  html.dark header {
    background-color: #212f3c;
  }
  .Logo {
    width: 1rem;
    height: 1rem;
  }
</style>

<header>
  <nav>
    <Hamburger />
    <div class="container">
      <img
        src={deltaIcon.src}
        style={{ width: "4rem", height: "4rem", borderRadius: "8rem" }}
      />
      <Navigation />
      <ThemeIcon />
    </div>
  </nav>
</header>
